{
  "compilerOptions": {
    /* ✅ Modern JS for Electron (Node 18+ and Chromium) */
    "target": "ES2020",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "moduleResolution": "bundler",

    /* ✅ React 18 JSX transform */
    "jsx": "react-jsx",

    /* ✅ Import and module handling */
    "resolveJsonModule": true,
    "isolatedModules": true,
    "allowSyntheticDefaultImports": true,
    "allowImportingTsExtensions": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "noEmit": true,

    /* ✅ Stricter typing & hygiene */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,

    /* ✅ Support for `@/*` aliases and custom types */
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },

    /* ✅ Recognize custom type definitions (like server-destroy.d.ts) */
    "typeRoots": ["./node_modules/@types", "./src/types"]
  },

  /* ✅ Include project files */
  "include": [
    "src",
    "electron",
    "vite.config.ts",
    "src/types"
  ],

  /* ✅ Optional: Node build references */
  "references": [{ "path": "./tsconfig.node.json" }]
}
